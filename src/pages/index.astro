---
import Layout from '@layouts/Layout.astro';
import Projects from '@components/projects/Projects.astro';
import Experiences from '@components/experiences/Experiences.astro';
import Education from '@components/education/Education.astro';
import Contact from '@components/contact/Contact.astro';
import Footer from '@components/layout/Footer.astro';
import Header from '@components/layout/Header.astro';
import InfiniteCarrousel from '@components/stack-carrousel/InfiniteCarrousel.astro';
import { Toaster } from '@components/ui/toaster';
---

<Layout title="Uberth Hernandez">
  <Header />
  <main class="px-10 md:px-20 lg:px-28">
    <InfiniteCarrousel />
    <Projects />
    <Experiences />
    <Education />
    <Contact />
  </main>
  <Footer />
  <Toaster client:load />
</Layout>
