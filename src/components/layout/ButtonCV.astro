---
interface Props {
  background: string;
}

const { background } = Astro.props;
---

<a
  href="/CV_Uberth_Hernandez.pdf"
  target="_blank"
  class=`rbt-btn btn-border-gradient radius-round font-p text-blue uppercase`
>
  <span class="btn-text"> Download CV </span>
  <span class="icon"></span>
</a>

<style define:vars={{ background }}>
  .rbt-btn.btn-border-gradient {
    background: linear-gradient(70deg, #0029ff, #d8ecff);
    border: none;
    outline: 0;
    cursor: pointer;
    position: relative;
    z-index: 10;
    color: #0029ff;
    text-decoration: none;
    box-shadow: 0 10px 13px 0 rgba(209, 211, 237, 0.39);
    border-radius: 0;
  }

  .rbt-btn {
    padding: 0 56px;
    height: 50px;
    line-height: 50px;
    font-size: 14px;
    letter-spacing: 0.5px;
    font-weight: 400;
    display: inline-block;
    position: relative;
    z-index: 1;
    transition: all 0.4s ease-in-out;
    border-radius: 6px;
    border: 0;
    outline: 0;
    animation: fade-in 0.5s linear;
  }

  .radius-round {
    border-radius: 22px !important;
  }

  .rbt-btn.btn-border-gradient.radius-round::before {
    border-radius: 20px;
  }

  .rbt-btn.btn-border-gradient::before {
    content: '';
    z-index: -1;
    top: 3px;
    left: 3px;
    position: absolute;
    width: calc(100% - 6px);
    height: calc(100% - 6px);
    box-sizing: border-box;
    background-color: var(--background);
  }

  .btn-text {
    font-weight: 600;
    display: inline-block;
    transition: all 0.2s ease-in-out;
  }

  .icon {
    opacity: 0;
    transition: all 0.2s ease-in-out;
  }

  .icon::before {
    content: '';
    position: absolute;
    top: 17px;
    right: 43px;
    width: 15px;
    height: 15px;
    color: #0029ff;
    background-image: url('../../images/download.png');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .rbt-btn:hover .icon {
    opacity: 1;
  }

  .rbt-btn:hover .btn-text {
    transform: translate(-10px);
    transition: all 0.2s ease-in-out;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(50px);
    }

    to {
      opacity: 1;
      transform: translateY(0px);
    }
  }
</style>
