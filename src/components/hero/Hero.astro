---
const lang = Astro.url.pathname.split('/')[1] || 'en';
import { getTranslation } from '@utils/i18n';
import { ButtonCV } from '@components/layout/ButtonCV';
import HeroImage from './HeroImage.astro';
import { Button } from '@components/ui/button';
import { Github } from 'lucide-react';
---

<section
  class="relative h-screen flex flex-col-reverse md:flex-row items-center justify-center z-30 px-10 md:px-20 lg:px-28"
>
  <!-- TEXT -->
  <div class="md:basis-1/2 text-center md:text-left">
    <h3 class="text-4xl mb-3 text-slate-600">Uberth Hernandez</h3>
    <h1 class="font-header font-bold text-6xl md:text-6xl lg:text-8xl mt-0">
      {getTranslation(lang, 'Full-stack Web Developer ðŸš€')}
    </h1>
    <p class="hidden sm:block leading-10 text-3xl font-p text-slate-600 pb-16">
      {getTranslation(lang, 'hero')}
    </p>
    <div class="flex flex-col gap-4 sm:block">
      <ButtonCV />
      <Button variant={'github'} size={'lg'} asChild>
        <a
          target="_blank"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap text-2xl font-p focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-6 [&_svg]:shrink-0 bg-black text-p font-3xl text-white font-bold hover:bg-black/80 h-16 rounded-xl px-8"
          href="https://github.com/Snipsx17"
        >
          <Github />
          Checkout Repo
        </a>
      </Button>
    </div>
  </div>

  <!-- IMAGE -->
  <div class="relative mb-16 flex items-center justify-center md:basis-1/2">
    <HeroImage />
  </div>
</section>
